{
  "name": "@react-pakistan/react-native-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "clean": "rm -rf /tmp/metro-bundler-cache-* && rm -rf /tmp/haste-map-react-native-packager-*",
    "format": "prettier --config .prettierrc --write 'src/**/*.{js,jsx}'",
    "ios": "react-native run-ios",
    "lint": "esw src --color",
    "pod:install": "cd ios; pod install; cd ..",
    "lint-staged": "lint-staged",
    "lint:watch": "yarn lint --clear --watch",
    "preclean": "watchman watch-del-all && rm -rf node_modules && yarn",
    "remetro": "watchman watch-del-all && yarn start --reset-cache",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --coverage --config ./jest.config.js",
    "upgrade": "ncu -u -x react-native-svg"
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.11.2",
    "@react-navigation/drawer": "^5.11.4",
    "@react-navigation/native": "^5.8.10",
    "@react-navigation/stack": "^5.12.8",
    "@react-pakistan/react-native-commons-collection": "^2.0.4",
    "@react-pakistan/react-native-icon-collection": "^2.0.8",
    "@react-pakistan/react-native-ui-collection": "^2.0.2",
    "@react-pakistan/util-react-native-functions": "^1.1.0",
    "axios": "^0.21.0",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-native": "0.63.4",
    "react-native-device-info": "^7.2.1",
    "react-native-elements": "^2.3.2",
    "react-native-gesture-handler": "^1.9.0",
    "react-native-onboarding-swiper": "^1.1.4",
    "react-native-reanimated": "^1.13.2",
    "react-native-safe-area-context": "^3.1.9",
    "react-native-screens": "^2.15.0",
    "react-native-svg": "^12.1.0",
    "react-native-vector-icons": "^7.1.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "metro-react-native-babel-preset": "^0.64.0",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "17.0.1",
    "redux-mock-store": "^1.5.4"
  },
  "jest": {
    "preset": "react-native"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
