{
  "name": "@react-pakistan/react-native-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "clean": "rm -rf /tmp/metro-bundler-cache-* && rm -rf /tmp/haste-map-react-native-packager-*",
    "format": "prettier --config .prettierrc --write 'src/**/*.{js,jsx}'",
    "ios": "react-native run-ios",
    "lint": "esw src --color",
    "pod:install": "cd ios; pod install; cd ..",
    "lint-staged": "lint-staged",
    "lint:watch": "yarn lint --clear --watch",
    "preclean": "watchman watch-del-all && rm -rf node_modules && yarn",
    "remetro": "watchman watch-del-all && yarn start --reset-cache",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "upgrade": "ncu -u"
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.9.1",
    "@react-navigation/drawer": "^5.9.2",
    "@react-navigation/native": "^5.7.5",
    "@react-navigation/stack": "^5.9.2",
    "@react-pakistan/react-native-commons-collection": "^1.0.1",
    "@react-pakistan/react-native-icon-collection": "^1.0.0",
    "@react-pakistan/react-native-ui-collection": "^1.0.0",
    "axios": "^0.20.0",
    "prop-types": "^15.7.2",
    "react": "16.13.1",
    "react-native": "0.63.3",
    "react-native-device-info": "^6.2.0",
    "react-native-elements": "^2.3.2",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-onboarding-swiper": "^1.1.4",
    "react-native-reanimated": "^1.13.1",
    "react-native-safe-area-context": "^3.1.8",
    "react-native-screens": "^2.11.0",
    "react-native-svg": "^12.1.0",
    "react-native-vector-icons": "^7.1.0",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/runtime": "^7.11.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.5.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.3",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "metro-react-native-babel-preset": "^0.63.0",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "16.13.1",
    "redux-mock-store": "^1.5.4"
  },
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "transform": {},
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation|react-native-paper|@react-native-community/masked-view|@react-navigation/.*)"
    ],
    "setupFiles": [
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
