{
  "name": "@react-pakistan/react-native-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "clean": "rm -rf /tmp/metro-bundler-cache-* && rm -rf /tmp/haste-map-react-native-packager-*",
    "format": "prettier --config .prettierrc --write 'src/**/*.{js,jsx}'",
    "ios": "react-native run-ios",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint --config eslint.config.js .",
    "lint:staged": "lint-staged",
    "lint:css": "stylelint 'src/**/*.js' --config stylelint.config.js",
    "pod:install": "cd ios; pod install; cd ..;",
    "preclean": "watchman watch-del-all && rm -rf node_modules && yarn",
    "remetro": "watchman watch-del-all && yarn start --reset-cache",
    "start": "react-native start",
    "test": "jest --coverage --config ./jest.config.js",
    "upgrade": "ncu -u -x react-native-svg"
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.11.7",
    "@react-navigation/drawer": "^5.12.3",
    "@react-navigation/native": "^5.9.2",
    "@react-navigation/stack": "^5.14.2",
    "@react-pakistan/react-native-commons-collection": "^2.1.14",
    "@react-pakistan/react-native-icon-collection": "^2.0.20",
    "@react-pakistan/react-native-ui-collection": "^2.0.10",
    "@react-pakistan/util-react-native-functions": "^1.1.15",
    "axios": "^0.21.1",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-native": "0.63.4",
    "react-native-device-info": "^8.0.1",
    "react-native-elements": "^3.1.0",
    "react-native-gesture-handler": "^1.9.0",
    "react-native-onboarding-swiper": "^1.1.4",
    "react-native-reanimated": "^1.13.2",
    "react-native-safe-area-context": "^3.1.9",
    "react-native-screens": "^2.17.1",
    "react-native-svg": "^11.0.1",
    "react-native-unimodules": "^0.12.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/runtime": "^7.12.13",
    "@react-native-community/eslint-config": "^2.0.0",
    "@react-pakistan/eslint-config-shared": "^1.2.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "detox": "^18.2.2",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.4",
    "metro-react-native-babel-preset": "^0.65.0",
    "react-test-renderer": "17.0.1",
    "redux-mock-store": "^1.5.4",
    "stylelint": "^13.9.0",
    "stylelint-config-react-native-styled-components": "^0.3.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-react-native": "^2.2.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "pre-commit": [
    "lint:staged"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn lint"
    ]
  }
}
