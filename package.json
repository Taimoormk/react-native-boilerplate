{
  "name": "@react-pakistan/react-native-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "build": "yarn clean:build && yarn build:ts && cp package.json lib && cp README.md lib",
    "build:ts": "tsc --project tsconfig.build.json",
    "bundle": "cd android && ./gradlew bundleRelease",
    "clean": "npx react-native-clean-project",
    "clean:build": "yarn rimraf ./lib",
    "debug": "open 'rndebugger://set-debugger-loc?host=localhost&port=8081'",
    "format": "yarn format:markdown",
    "format:markdown": "prettier --parser markdown --write *.md",
    "gradle": "cd android; ./gradlew clean; cd ..",
    "ios": "react-native run-ios",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:staged": "lint-staged",
    "lint:css": "stylelint 'src/**/*.ts' --config stylelint.config.js",
    "lint:ts": "eslint --config eslint.config.js",
    "pod:install": "cd ios; pod install; cd ..",
    "pod:update": "cd ios; pod update; cd ..",
    "setup": "yarn; yarn pod; yarn gradle;",
    "start": "yarn clean:build && react-native start",
    "test": "jest --coverage --config ./jest.config.js",
    "upgrade": "ncu -u -x react-native-svg"
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.11.8",
    "@react-navigation/drawer": "^5.12.4",
    "@react-navigation/native": "^5.9.3",
    "@react-navigation/stack": "^5.14.3",
    "@react-pakistan/react-native-commons-collection": "^2.3.1",
    "@react-pakistan/react-native-icon-collection": "^2.3.1",
    "@react-pakistan/react-native-ui-collection": "^2.1.3",
    "@react-pakistan/util-functions": "^1.5.2",
    "@react-pakistan/util-react-native-functions": "^1.4.11",
    "axios": "^0.21.1",
    "react": "17.0.1",
    "react-native": "0.63.4",
    "react-native-device-info": "^8.0.5",
    "react-native-elements": "^3.3.0",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-onboarding-swiper": "^1.1.4",
    "react-native-reanimated": "^2.0.0",
    "react-native-safe-area-context": "^3.2.0",
    "react-native-screens": "^2.18.1",
    "react-native-svg": "^11.0.1",
    "react-native-unimodules": "^0.12.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/runtime": "^7.13.10",
    "@react-native-community/eslint-config": "^2.0.0",
    "@react-pakistan/eslint-config-shared": "^1.2.15",
    "@types/i18n-js": "^3.8.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-native": "^0.63.51",
    "@types/react-native-onboarding-swiper": "^1.1.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-test-renderer": "^17.0.1",
    "@types/redux-logger": "^3.0.8",
    "@types/styled-components": "^5.1.7",
    "@types/styled-components-react-native": "^5.1.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "detox": "^18.7.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.4",
    "metro-react-native-babel-preset": "^0.65.2",
    "react-native-typescript-transformer": "^1.2.13",
    "react-test-renderer": "17.0.1",
    "redux-mock-store": "^1.5.4",
    "stylelint": "^13.12.0",
    "stylelint-config-react-native-styled-components": "^0.3.0",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-react-native": "^2.2.0",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "pre-commit": [
    "lint:staged"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn lint"
    ]
  }
}
