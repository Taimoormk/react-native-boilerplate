{
  "name": "reactNativeBoilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "format": "prettier --config .prettierrc --write 'src/**/*.{js,jsx}'",
    "lint-staged": "lint-staged",
    "preclean": "watchman watch-del-all && rm -rf node_modules && yarn",
    "clean": "rm -rf /tmp/metro-bundler-cache-* && rm -rf /tmp/haste-map-react-native-packager-*",
    "remetro": "watchman watch-del-all && yarn start --reset-cache",
    "lint": "esw src --color",
    "lint:watch": "yarn lint --clear --watch"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "16.8.6",
    "react-native": "0.59.5",
    "react-native-gesture-handler": "^1.2.0",
    "react-native-paper": "^2.15.2",
    "react-native-vector-icons": "^6.4.2",
    "react-navigation": "^3.9.1",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "babel-jest": "^24.7.1",
    "jest": "^24.7.1",
    "metro-react-native-babel-preset": "^0.53.1",
    "react-test-renderer": "16.8.6",
    "redux-mock-store": "^1.5.3"
  },
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "coverageDirectory": "__coverage__",
    "transform": {
      "^.+\\.js$": "<rootDir>/jest.preprocessor.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|native-base|react-navigation|react-native-fabric|react-native-paper)"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "*.json": [
    "prettier --parser json --write",
    "git add"
  ],
  "rnpm": {
    "assets": [
      "./assets/fonts"
    ]
  }
}
